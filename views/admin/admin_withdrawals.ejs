<h2 class="text-center my-4">Withdrawal Requests</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% withdrawals.forEach(w=> { %>
                <tr>
                    <td>
                        <%= w.username %>
                    </td>
                    <td>
                        <%= w.email %>
                    </td>
                    <td>
                        <%= new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2
                            }).format(w.amount || 0) %>
                    </td>
                    <td>
                        <%= w.currency || 'N/A' %>
                    </td>
                    <td>
                        <%= w.status || 'Pending' %>
                    </td>
                    <td>
                        <%= w.date ? new Date(w.date).toLocaleString() : 'N/A' %>
                    </td>
                    <td>
                        <% if ((w.status || 'Pending' ).toLowerCase()==='pending' ) { %>
                            <form action="/admin/withdrawals/<%= w._id %>/approve" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form action="/admin/withdrawals/<%= w._id %>/decline" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Decline</button>
                            </form>
                            <% } else { %>
                                <span class="badge bg-secondary">
                                    <%= w.status %>
                                </span>
                                <% } %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>

<div class="mt-4 text-center">
    <a href="/admin/dashboard" class="btn btn-outline-primary">‚Üê Back to Dashboard</a>
</div>