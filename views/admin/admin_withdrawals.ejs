<h2>Withdrawal Requests</h2>

<table border="1" cellpadding="8" cellspacing="0">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% withdrawals.forEach(w=> { %>
            <tr>
                <td>
                    <%= w.username %>
                </td>
                <td>
                    <%= w.email %>
                </td>
                <td>
                    <%= w.currency || '' %>
                        <%= new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2
                            }).format(w.amount || 0) %>
                </td>
                <td>
                    <%= w.currency || 'N/A' %>
                </td>
                <td>
                    <%= w.status || 'Pending' %>
                </td>
                <td>
                    <%= new Date(w.date).toLocaleString() %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>

