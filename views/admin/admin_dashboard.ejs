<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard - Users</title>
    <style>
        body {
            background: linear-gradient(to right, #000000, #1a1a1a);
            color: #ffffff;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #00b050;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #2b2b2b;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 176, 80, 0.3);
        }

        th,
        td {
            padding: 15px;
            border: 1px solid #444;
            text-align: center;
        }

        th {
            background-color: #00b050;
            color: #ffffff;
        }

        td {
            color: #ffffff;
        }

        input[type="number"] {
            padding: 5px;
            width: 100px;
            border: 1px solid #888;
            border-radius: 5px;
            background-color: #1e1e1e;
            color: white;
        }

        button {
            background-color: #00b050;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #009040;
        }

        a {
            display: block;
            margin-top: 30px;
            text-align: center;
            color: #00b050;
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <h2>Admin Dashboard - Users</h2>

    <table>
        <tr>
            <th>Username</th>
            <th>Balance</th>
            <th>Currency</th>
            <th>Adjust Balance</th>
        </tr>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <%= typeof user.balance==='number' ? user.balance.toFixed(2) : '0.00' %>
                </td>
                <td>
                    <%= user.currency || 'N/A' %>
                </td>
                <td>
                    <form method="POST" action="/admin/update-balance">
                        <input type="hidden" name="userId" value="<%= user._id %>">
                        <input type="number" name="newBalance" step="0.01" required>
                        <button type="submit">Update</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </table>

    <a href="/admin/withdrawals">View Withdrawals</a>
</body>

</html>